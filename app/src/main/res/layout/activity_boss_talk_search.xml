<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.community.boss_talk.search.BossTalkSearchActivity"
    android:background="@color/Gray100">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/input_keyword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_radius100_white"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        android:hint="궁금한 키워드"
        android:textColorHint="@color/Gray400"
        android:textSize="12dp"
        android:paddingHorizontal="18dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="@id/input_keyword"
        app:layout_constraintTop_toTopOf="@id/input_keyword"
        app:layout_constraintBottom_toBottomOf="@id/input_keyword"
        android:layout_marginEnd="18dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_boss_talk_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_keyword"
        android:layout_marginTop="21dp"
        android:layout_marginHorizontal="24dp"
        android:visibility="visible" />



    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일치하는 검색 결과가 없어요."
        android:textColor="#7F7F7F"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>