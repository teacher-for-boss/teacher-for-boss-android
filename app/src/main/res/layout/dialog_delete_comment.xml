<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_radius12_white">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변을 삭제하시겠습니까?"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Title2"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp" />

        <FrameLayout
            android:id="@+id/keep_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radius8_gray300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="27dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_exit_button"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginVertical="14dp"
                android:layout_marginHorizontal="30dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radius8_purple600"
            app:layout_constraintStart_toEndOf="@id/keep_btn"
            app:layout_constraintTop_toTopOf="@id/keep_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="27dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_delete_button"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginVertical="14dp"
                android:layout_marginHorizontal="30dp" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>