<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="40dp"

        android:background="@drawable/background_radius20_white">

        <TextView
            android:id="@+id/title"
            android:text="프로필을 선택해주세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Title.SemiBold.20"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            >

        </TextView>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginTop="25dp"
            android:background="@drawable/profile_background"
            android:clipToOutline="true"
            android:src="@drawable/profile_boss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exitBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_purple_button"
            android:text="완료"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Body.Medium.16"

            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        </androidx.appcompat.widget.AppCompatButton>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImage">

            <TableRow>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true"
                    android:src="@drawable/profile_boss" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_background"
                    android:clipToOutline="true" />

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>