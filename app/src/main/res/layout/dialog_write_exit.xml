<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius12_white">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/dialog_write_exit"
        android:textAppearance="@style/TextAppearance.TeacherForBoss.Body1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius8_gray300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_exit"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginVertical="14dp"
            android:layout_marginHorizontal="30dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/keep_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius8_purple600"
        app:layout_constraintStart_toEndOf="@id/exit_btn"
        app:layout_constraintTop_toTopOf="@id/exit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_write_btn"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginVertical="14dp"
            android:layout_marginHorizontal="30dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>