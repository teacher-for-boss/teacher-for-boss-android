<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_payment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_payment_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_ask_payment_selector"
        android:paddingHorizontal="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/payment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="베이직 구독권"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Label7"
            android:textColor="@color/Gray700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:paddingVertical="4dp"/>

        <TextView
            android:id="@+id/payment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="티처톡 열람권 + 질문권 3개"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Label6"
            android:textColor="@color/Gray300"
            app:layout_constraintTop_toBottomOf="@id/payment_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/payment_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14,700"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Label7"
            android:textColor="@color/Gray300"
            app:layout_constraintEnd_toStartOf="@+id/payment_price"
            app:layout_constraintTop_toTopOf="@id/payment_number"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" -> 9,900원"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Label7"
            android:textColor="@color/Gray700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/payment_number"
            android:paddingVertical="4dp" />
        
        <TextView
            android:id="@+id/payment_discount_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33% 할인"
            android:textAppearance="@style/TextAppearance.TeacherForBoss.Label6"
            android:textColor="@color/Blue500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/payment_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>